{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/smart-oversight/schemas/doctrine-block.schema.json",
  "title": "Smart Oversight Doctrine Block (Payload)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "doctrine_id",
    "title",
    "status",
    "scope",
    "principles",
    "refusal_triggers",
    "reason_codes"
  ],
  "properties": {
    "doctrine_id": {
      "type": "string",
      "description": "Stable identifier for this doctrine block.",
      "pattern": "^DOC-[A-Z0-9_\\-]{3,}$"
    },
    "title": {
      "type": "string",
      "minLength": 5
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "deprecated"]
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["applies_to"],
      "properties": {
        "applies_to": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[a-z0-9_\\-]+$" },
          "minItems": 1,
          "description": "List of object_type values this doctrine block governs (e.g., gate_eval, replay, ingestion)."
        },
        "hazard_domains": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Optional human label set (not used for logic)."
        }
      }
    },
    "principles": {
      "type": "array",
      "description": "Non-negotiable interpretive rules stated as short constraints.",
      "items": { "type": "string", "minLength": 8 },
      "minItems": 1
    },
    "refusal_triggers": {
      "type": "array",
      "description": "Conditions that require denial of continuation.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["trigger_id", "description", "gate_state", "reason_code"],
        "properties": {
          "trigger_id": {
            "type": "string",
            "pattern": "^TRIG-[A-Z0-9_\\-]{3,}$"
          },
          "description": { "type": "string", "minLength": 10 },
          "gate_state": {
            "type": "string",
            "enum": ["PASS", "CONDITIONAL", "BLOCK"]
          },
          "reason_code": {
            "type": "string",
            "pattern": "^RSN-[A-Z0-9_\\-]{3,}$"
          }
        }
      },
      "minItems": 1
    },
    "reason_codes": {
      "type": "array",
      "description": "Enumerated reason codes used in gate logs and replay packets.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "label", "severity"],
        "properties": {
          "code": { "type": "string", "pattern": "^RSN-[A-Z0-9_\\-]{3,}$" },
          "label": { "type": "string", "minLength": 5 },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] }
        }
      },
      "minItems": 1
    },
    "notes": {
      "type": "string",
      "description": "Optional human explanation; not used for logic."
    }
  }
}
